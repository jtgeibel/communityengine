-box :class => 'alt first_alt' do
  %h3 Search
  = link_to( "&raquo; #{:back_to_all_users.l}", users_path) if params['login'] || params['tag_list']
  - form_tag users_path, :method => :get , :class => 'MainForm' do
    %label= :user_login.l+":"
    = text_field_tag 'login', @search['login']
    %p
      = render :partial => 'shared/location_chooser', :locals => {:selected_county => @search['county_id'].to_i, :selected_neighborhood => @search['neighborhood_id'].to_i, :neighborhoods => @neighborhoods}

    %p 
      %input{"type"=>"submit", "value"=>:search_users.l}


-box :class => 'alt' do
  %h3= "Neighborhoods"
  - city_cloud @neighborhoods_for_cloud, %w(nube1 nube2 nube3 nube4 nube5) do |city, css_class|
    = link_to city.name, users_path(:neighborhood_id => city.id), :class => css_class

- if current_user
  -box :class => "alt" do 
    %h3= :share_the_love.l
    = link_to :invite_your_friends_to_join.l, invite_user_path(current_user)
