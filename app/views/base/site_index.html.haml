- @meta = { :description => AppConfig.meta_description, :keywords => AppConfig.meta_keywords, :robots => AppConfig.robots_meta_list_content }

#yui-main
  .yui-b
    -#box :class => "alt" do
      %h3
        =:upcoming_events.l
      = render :partial => 'events/event', :collection => Event.all, :locals=>{:show_details_link=>true}
    -box :class => "alt" do
      %h3=:upcoming_events.l
      %iframe{:src => "http://www.google.com/calendar/embed?title=Upcoming%20Events&amp;showTitle=0&amp;showDate=0&amp;showPrint=0&amp;showTabs=0&amp;showCalendars=0&amp;mode=AGENDA&amp;height=180&amp;wkst=1&amp;bgcolor=%23ffffff&amp;src=l11c2rg6hr0shrepi3dad74ibk%40group.calendar.google.com&amp;color=%23AB8B00&amp;ctz=America%2FNew_York", :style => "border-width:0;", :width=>537, :height=>180, :frameborder=>0, :scrolling=>"no"}
    -unless logged_in?
      -box :class => "alt" do
        =render :partial => 'base/intro'
    -box :class => "hfeed alt" do 
      %h3
        =:recent_posts.l
      = render :partial => 'posts/post', :collection => @posts
      %h6.all= link_to :see_all_recent_posts.l, recent_path
.yui-b  
  -unless logged_in?
    =render :partial => 'base/signup_button'

  -if @popular_posts.count > 0
    -box :class => "alt" do 
      %h3= :whats_hot.l
      %ul.list.page
        -@popular_posts.each do |post|
          =render :partial => 'posts/sidebar_post', :locals => {:post => post}
      %h6.all
        %a{:href=>popular_url}= :see_all.l

  -box :class => "alt", :id => "active_users" do 
    %h3= :active_users.l
    -@active_users.each do |user|    
      =render :partial => "users/sidebar_user", :locals => {:user => user}      
    %h6.all
      %a{:href=>users_url} See More

  -box :class => "alt" do 
    %h3
      =:featured_writer.l
  -box :class => "alt" do
    %h3=:tags.l
    - tag_cloud @popular_tags, %w(nube1 nube2 nube3 nube4 nube5) do |name, css_class|
      = link_to name, tag_path(URI::encode(name, /[\/.?#]/)), :class => css_class
    %h6.all=link_to :all_tags.l, tags_path

  =render :partial => 'shared/explore'
